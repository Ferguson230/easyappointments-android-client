<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_item_height">

    <TextView
        android:id="@+id/app_customer"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="Massimiliano Turrotti"
        android:textAppearance="?attr/textAppearanceSearchResultTitle" />

    <TextView
        android:id="@+id/app_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/text_margin"
        android:text="01/01/2017 18:00"
        android:textAppearance="?attr/textAppearanceSearchResultSubtitle" />

    <TextView
        android:id="@+id/app_service"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="Service test"
        android:textAppearance="?attr/textAppearanceSearchResultSubtitle" />
</RelativeLayout>
